<div class="content" ng-app="grievances" ng-controller="Gcm_grievances">
        <h1>Grievance Details</h1>
<div class="showentries">
Show <select name="entry" type="text" >
<option value="10">10</option>
<option value="20" >20</option>
<option value="50">50</option>
<option value="100">100</option>
</select> Entries
</div>

<div class="search">
Search: <input type="text" name="search">
</div>

<div class="content-table">
<table>
<tr>
<td>S. No.</td>
<td>Grievance No.</td>
<td>Grievance Type</td>
<td>Subject</td>
<td>Grievance</td>
<td>Status</td>
<td>Action</td>
</tr> 
<tr ng-repeat="result in result">
                <td>{{$index}}</td>
                <td>{{result.grv_id}}</td>
                <td>{{result.Gtype}} </td>
                <td>{{result.subject}}</td>
                <td>{{result.Grv}}</td>
                <td>{{result.status}}</td>
                <td>{{result.reply}}</td>
                <td>-</td>
                <td><button class="reply_button {{$index}}" onclick="document.getElementById('rpform {{$index}}').style.display='block'">reply</button></td>
        
        </tr>
</table>
</div>

<div class="content-table-data">
<table>
 
                </table>
                

</div>
<div class="nav-button">
<a>Previous</a>
<a>Next</a>
</div>
    </div>

 

        <div ng-repeat="result in result" id="rpform {{$index}}" class="rpform" >
    <div id="reply_form {{$index}}" class="reply_form {{$index}}">
               <form action="/post/reply">
                       <span onclick="document.getElementById('rpform {{$index}}').style.display='none'" class="close" title="Close PopUp">&times;</span>
               <table>
                       <tr>
                               <td>id</td><td></td>
                               <td><input id="replyid{{$index}}" type="text" value="{{result.grv_id}}" name="" style="border-radius: 5px; font-size: 20px"></td>
                       </tr>
                       <tr>
                               <td>Type reply</td><td></td>
                               <td><textarea cols="100" rows="6.5" data-val="true" data-val-required="The reply is required." aria-required="true" maxlength="3000" style="border-radius: 5px; font-size: 20px"></textarea></td>
                       </tr>
               </table>
               <button type="submit" style="width: 150px;height: 50px;font-size: 20px;margin-left: 80px;">send reply</button>
       </form>
       </div>

        </div>
</div>